<%= form_with(model: friendship, local: true) do |form| %>
  <% if friendship.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friendship.errors.count, "error") %> Save Error:</h2>

      <ul>
      <% friendship.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="f_field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="f_field">
    <%= form.label :friend_id %>
    <%= form.text_field :friend_id %>
  </div>

  <div class="f_field">
    <%= form.label :status %>
    <%= form.check_box :status %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>